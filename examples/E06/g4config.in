#
# Geant4 configuration macro for Example06
# (called from Root macro g4Config.C)

# Verbose levels
#
/mcVerbose/all 0
/mcVerbose/geometryManager 1
/mcVerbose/opticalPhysicsList 2

# Optical processes verbose
# 
#/mcPhysics/selectOpProcess Scintillation
#/mcPhysics/setOpProcessVerbose 2
#/mcPhysics/selectOpProcess Cerenkov
#/mcPhysics/setOpProcessVerbose 2
#/mcPhysics/selectOpProcess Absorption
#/mcPhysics/setOpProcessVerbose 2
#/mcPhysics/selectOpProcess Rayleigh
#/mcPhysics/setOpProcessVerbose 2
#/mcPhysics/selectOpProcess Boundary
#/mcPhysics/setOpProcessVerbose 2

# Inactivate scintillation
#
/mcPhysics/selectOpProcess Scintillation
/mcPhysics/setOpProcessActivation false

# Set parameters for Cerenkov
#
/mcPhysics/setCerenkovMaxPhotons 20
/mcPhysics/setCerenkovMaxBetaChange 0.1

# Set optical surface model 
#
/mcPhysics/setOpticalSurfaceModel unified

#/tracking/verbose 1

